@page
@model NguyenTuanKietRazorPages.Pages.Categoris.IndexModel
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Danh sách danh mục</h2>
    <div class="row mb-4">
        <div class="col-md-4">
            <a asp-page="./Create" class="btn btn-success btn-lg">Thêm mới</a>
        </div>
        <div class="col-md-8">
            <form method="get" class="form-inline">
                <div class="form-group me-2">
                    <input asp-for="SearchName" class="form-control form-control-lg" placeholder="Tìm theo tên" />
                </div>
                <div class="form-group me-2">
                    <select asp-for="SearchStatus" class="form-select form-select-lg">
                        <option value="">Tất cả trạng thái</option>
                        <option value="1">Hoạt động</option>
                        <option value="0">Không hoạt động</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Tìm kiếm</button>
            </form>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var category in Model.Categories)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-3" style="transition: transform 0.2s;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@category.CategoryName</h5>
                        <p class="card-text text-muted flex-grow-1">
                            Trạng thái: <span class="@(category.Status == 1 ? "text-success" : "text-danger")">
                                @(category.Status == 1 ? "Hoạt động" : "Không hoạt động")
                            </span>
                        </p>
                        <div class="btn-group mt-auto">
                            <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm me-2">Sửa</a>
                            <a asp-page="./Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}