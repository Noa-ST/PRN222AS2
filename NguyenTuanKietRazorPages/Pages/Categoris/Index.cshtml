@page
@model NguyenTuanKietRazorPages.Pages.Categoris.IndexModel
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<!-- Nhúng Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<style>
    .card-list {
        transition: transform 0.2s;
        border: none;
        border-radius: 8px;
    }

        .card-list:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .btn-group .btn {
        padding: 6px 12px;
    }

    .form-inline {
        gap: 10px;
    }

    .btn-custom {
        background: linear-gradient(90deg, #28a745, #218838);
        border: none;
        border-radius: 5px;
        padding: 8px 20px;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: linear-gradient(90deg, #218838, #1a6629);
            transform: translateY(-2px);
        }

    .btn-primary {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0056b3, #003366);
        }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Danh sách danh mục</h2>
    <div class="row mb-4 align-items-end">
        <div class="col-md-4">
            <a asp-page="./Create" class="btn btn-custom btn-lg w-100">Thêm mới</a>
        </div>
        <div class="col-md-8">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <input asp-for="SearchName" class="form-control form-control-lg" placeholder="Tìm theo tên" />
                </div>
                <div class="col-md-4">
                    <select asp-for="SearchStatus" class="form-select form-select-lg">
                        <option value="">Tất cả trạng thái</option>
                        <option value="1">Hoạt động</option>
                        <option value="0">Không hoạt động</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var category in Model.Categories)
        {
            <div class="col">
                <div class="card card-list shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@category.CategoryName</h5>
                        <p class="card-text text-muted flex-grow-1">
                            Trạng thái: <span class="@(category.Status == 1 ? "text-success" : "text-danger")">
                                @(category.Status == 1 ? "Hoạt động" : "Không hoạt động")
                            </span>
                        </p>
                        <div class="btn-group mt-auto">
                            <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm me-2">Sửa</a>
                            <a asp-page="./Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}