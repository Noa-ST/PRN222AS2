@page
@model NguyenTuanKietRazorPages.Pages.NewsArticles.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<!-- Nhúng Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chỉnh sửa bài viết: @Model.NewsArticle.Title</h2>
        </div>
        <form method="post" class="needs-validation" novalidate>
            <div class="card-body p-4">
                <input type="hidden" asp-for="NewsArticle.ArticleId" />
                <div class="mb-4">
                    <label asp-for="NewsArticle.Title" class="form-label fw-bold text-primary">Tiêu đề</label>
                    <input asp-for="NewsArticle.Title" class="form-control form-control-lg border-primary" placeholder="Nhập tiêu đề bài viết" required />
                    <span asp-validation-for="NewsArticle.Title" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="NewsArticle.Content" class="form-label fw-bold text-primary">Nội dung</label>
                    <textarea asp-for="NewsArticle.Content" class="form-control border-primary" rows="6" placeholder="Nhập nội dung bài viết" required></textarea>
                    <span asp-validation-for="NewsArticle.Content" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="NewsArticle.CategoryId" class="form-label fw-bold text-primary">Danh mục</label>
                    <select asp-for="NewsArticle.CategoryId" class="form-select border-primary" asp-items="Model.Categories" required>
                        <!-- Không thêm option mặc định không hợp lệ -->
                    </select>
                    <span asp-validation-for="NewsArticle.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="SelectedTagIds" class="form-label fw-bold text-primary">Thẻ</label>
                    <select asp-for="SelectedTagIds" class="form-select border-primary" asp-items="Model.Tags" multiple="multiple" required>
                        <!-- Tùy chọn thẻ sẽ được populate từ Model.Tags -->
                    </select>
                </div>
            </div>
            <div class="card-footer bg-light p-3">
                <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary text-white ms-2" style="background: linear-gradient(90deg, #007bff, #0056b3); border: none;">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Nhúng Bootstrap JS và Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
