@page
@model NguyenTuanKietRazorPages.Pages.NewsArticles.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .form-card {
        max-width: 700px;
        margin: auto;
        box-shadow: 0 0 10px rgba(0,0,0,0.15);
        border-radius: 10px;
        overflow: hidden;
    }

    .form-header {
        background-color: #0d6efd;
        color: white;
        padding: 15px 20px;
    }

    .form-body {
        padding: 20px;
    }

    .form-footer {
        padding: 15px 20px;
        background-color: #f8f9fa;
        text-align: end;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(13, 110, 253, 0.6);
        border-color: #0d6efd;
    }

    .btn-custom {
        background: linear-gradient(90deg, #0d6efd, #0056b3);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-custom:hover {
            background: linear-gradient(90deg, #0056b3, #003580);
        }
</style>

<div class="form-card">
    <div class="form-header">
        <h5>Chỉnh sửa bài viết: @Model.NewsArticle.Title</h5>
    </div>

    <form method="post">
        <div class="form-body">
            <input type="hidden" asp-for="NewsArticle.ArticleId" />

            <div class="mb-3">
                <label asp-for="NewsArticle.Title" class="form-label">Tiêu đề</label>
                <input asp-for="NewsArticle.Title" class="form-control" placeholder="Nhập tiêu đề" />
                <span asp-validation-for="NewsArticle.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewsArticle.Content" class="form-label">Nội dung</label>
                <textarea asp-for="NewsArticle.Content" class="form-control" rows="6" placeholder="Nhập nội dung bài viết"></textarea>
                <span asp-validation-for="NewsArticle.Content" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewsArticle.CategoryId" class="form-label">Danh mục</label>
                <select asp-for="NewsArticle.CategoryId" class="form-select" asp-items="Model.Categories"></select>
                <span asp-validation-for="NewsArticle.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedTagIds" class="form-label">Thẻ</label>
                <select asp-for="SelectedTagIds" class="form-select" asp-items="Model.Tags" multiple></select>
            </div>
        </div>

        <div class="form-footer">
            <a asp-page="./Index" class="btn btn-secondary me-2">Hủy</a>
            <button type="submit" class="btn btn-custom">Lưu thay đổi</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
