@page
@model NguyenTuanKietRazorPages.Pages.NewsArticles.IndexModel
@{
    ViewData["Title"] = "Quản lý bài viết";
}

<!-- Bootstrap CSS và style không đổi -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<style>
    .news-card {
        height: 300px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-content {
        height: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
    }

    .card-footer {
        margin-top: auto;
        padding-top: 10px;
        border-top: 1px solid #eee;
    }

    .btn-container {
        text-align: center;
    }

    .btn-group .btn {
        width: 30%;
        margin: 0 1%;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Quản lý bài viết</h2>

    <!-- Form tìm kiếm giữ nguyên -->
    <div class="row mb-3">
        <div class="col-md-2">
            <a class="btn btn-success w-100" asp-page="./Create">Thêm mới</a>
        </div>
        <div class="col-md-10">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Tìm theo tiêu đề</label>
                    <input asp-for="SearchTitle" class="form-control" placeholder="Nhập tiêu đề..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Chọn danh mục</label>
                    <select asp-for="SearchCategoryId" class="form-control" asp-items="Model.Categories">
                        <option value="">Tất cả danh mục</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Chọn thẻ</label>
                    <select asp-for="SearchTagId" class="form-control" asp-items="Model.Tags">
                        <option value="">Tất cả thẻ</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 mt-2">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách bài viết -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var article in Model.Articles)
        {
            <div class="col">
                <div class="card news-card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-dark">@article.Title</h5>
                        <p class="card-text card-content">@article.Content.Substring(0, Math.Min(100, article.Content.Length))...</p>
                    </div>
                    <div class="card-footer btn-container">
                        <div class="btn-group w-100">
                            <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@article.ArticleId">Chi tiết</a>
                            <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@article.ArticleId">Sửa</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@article.ArticleId">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Nếu không có bài viết -->
    @if (!Model.Articles.Any())
    {
        <div class="text-center mt-4">
            <p class="text-muted">Không có bài viết nào để hiển thị.</p>
        </div>
    }

    <!-- Phân trang -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
