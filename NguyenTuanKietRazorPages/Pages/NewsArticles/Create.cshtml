@page
@model NguyenTuanKietRazorPages.Pages.NewsArticles.CreateModel
@{
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .form-card {
        max-width: 600px;
        margin: 30px auto;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .form-header {
        padding: 15px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-body {
        padding: 20px;
    }

    .form-group label {
        font-weight: 500;
        color: #007bff;
    }

    .form-control {
        border-color: #007bff;
        border-radius: 5px;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-custom {
        background: linear-gradient(90deg, #007bff, #0056b3);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: linear-gradient(90deg, #0056b3, #003366);
            transform: translateY(-2px);
        }
</style>

<div class="modal-content form-card">
    <div class="modal-header form-header bg-primary text-white">
        <h5 class="modal-title">Thêm bài viết</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form method="post" class="needs-validation" novalidate>
        <div class="modal-body form-body">
            <div class="mb-4">
                <label asp-for="NewsArticle.Title" class="form-label">Tiêu đề</label>
                <input asp-for="NewsArticle.Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề" required />
                <span asp-validation-for="NewsArticle.Title" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NewsArticle.Content" class="form-label">Nội dung</label>
                <textarea asp-for="NewsArticle.Content" class="form-control" rows="6" placeholder="Nhập nội dung" required></textarea>
                <span asp-validation-for="NewsArticle.Content" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NewsArticle.CategoryId" class="form-label">Danh mục</label>
                <select asp-for="NewsArticle.CategoryId" class="form-select" asp-items="Model.Categories" required></select>
                <span asp-validation-for="NewsArticle.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="SelectedTagIds" class="form-label">Thẻ</label>
                <select asp-for="SelectedTagIds" class="form-select" asp-items="Model.Tags" multiple required></select>
            </div>
        </div>

        <div class="modal-footer bg-light p-3">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-custom">Lưu</button>
        </div>

        <input type="hidden" id="connectionId" name="ConnectionId" value="@Model.ConnectionId" />
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
