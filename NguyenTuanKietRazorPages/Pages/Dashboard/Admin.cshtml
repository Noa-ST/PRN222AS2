@page
@model NguyenTuanKietRazorPages.Pages.Dashboard.AdminModel
@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Chào mừng Admin!</h2>
    <p>Đây là dashboard dành cho Admin. Bạn có thể quản lý các chức năng sau:</p>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lý tài khoản</h5>
                    <form method="post" asp-page-handler="ManageAccounts">
                        <button type="submit" class="btn btn-primary w-100">Vào</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Báo cáo thống kê</h5>
                    <form method="post" asp-page-handler="ManageReports">
                        <button type="submit" class="btn btn-primary w-100">Tạo báo cáo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}