@page
@model NguyenTuanKietRazorPages.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<!-- Nhúng Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<style>
    .card-list {
        transition: transform 0.2s;
        border: none;
        border-radius: 8px;
    }

        .card-list:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .btn-group .btn {
        padding: 6px 12px;
    }

    .form-inline {
        gap: 10px;
    }

    .btn-custom {
        background: linear-gradient(90deg, #28a745, #218838);
        border: none;
        border-radius: 5px;
        padding: 8px 20px;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: linear-gradient(90deg, #218838, #1a6629);
            transform: translateY(-2px);
        }

    .btn-primary {
        background: linear-gradient(90deg, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0056b3, #003366);
        }

    .btn-danger {
        background: linear-gradient(90deg, #dc3545, #a71d2a);
    }

        .btn-danger:hover {
            background: linear-gradient(90deg, #a71d2a, #7a151e);
        }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Danh sách tài khoản</h2>
    <div class="row mb-4 align-items-end">
        <div class="col-md-4">
            <a asp-page="Create" class="btn btn-custom btn-lg w-100">Thêm mới</a>
        </div>
        <div class="col-md-8">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <input asp-for="SearchEmail" class="form-control form-control-lg" placeholder="Tìm theo email" />
                </div>
                <div class="col-md-4">
                    <select asp-for="SearchRole" class="form-select form-select-lg">
                        <option value="">Tất cả vai trò</option>
                        <option value="0">Lecturer</option>
                        <option value="1">Staff</option>
                        <option value="2">Admin</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var account in Model.Accounts)
        {
            <div class="col">
                <div class="card card-list shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark">@account.FullName</h5>
                        <p class="card-text text-muted flex-grow-1">
                            <small>Email: @account.Email</small><br />
                            <small>Vai trò: @(account.Role == 0 ? "Lecturer" : account.Role == 1 ? "Staff" : "Admin")</small>
                        </p>
                        <div class="btn-group mt-auto">
                            <a asp-page="Edit" asp-route-id="@account.AccountId" class="btn btn-warning btn-sm me-2">Sửa</a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@account.AccountId', '@account.FullName')">Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(accountId, name) {
            if (confirm(`Bạn có chắc muốn xóa tài khoản "${name}"?`)) {
                window.location.href = `/Accounts/Delete?id=${accountId}`;
            }
        }
    </script>
}