@page
@using FUNewsManagementSystem.Core.Models
@model NguyenTuanKietRazorPages.Pages.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container mt-4">
    <h2 class="mb-4">Hồ sơ của bạn</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Account.FullName" class="form-label">Họ và tên</label>
            <input asp-for="Account.FullName" class="form-control" />
            <span asp-validation-for="Account.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Account.Email" class="form-label">Email</label>
            <input asp-for="Account.Email" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
    </form>
    <h3 class="mt-4">Lịch sử bài viết</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã bài viết</th>
                <th>Tiêu đề</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles ?? Enumerable.Empty<NewsArticle>())
            {
                <tr>
                    <td>@article.ArticleId</td>
                    <td>@article.Title</td>
                    <td>@article.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@(article.Status == 1 ? "Active" : "Inactive")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}