@page
@model NguyenTuanKietRazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Đăng nhập</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Input.Password" type="password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3">Đăng nhập</button>
                <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}